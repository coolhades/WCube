<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ft_container"
    android:background="@mipmap/bg_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!---->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_viewmode"
            fancy:fb_text = "主控端"
            fancy:fb_iconPosition = "top"
            fancy:fb_defaultColor="#00000000"
            fancy:fb_textColor = "#ffffff"
            fancy:fb_fontIconSize = "60dp"
            fancy:fb_iconFont = "iconfont.ttf"
            fancy:fb_fontIconResource ="@string/pholder_control"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </mehdi.sakout.fancybuttons.FancyButton>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_controlmode"
            android:layout_toRightOf="@+id/btn_viewmode"
            fancy:fb_text = "主控端"
            fancy:fb_iconPosition = "top"
            fancy:fb_defaultColor="#00000000"
            fancy:fb_textColor = "#ffffff"
            fancy:fb_fontIconSize = "60dp"
            fancy:fb_iconFont = "iconfont.ttf"
            fancy:fb_fontIconResource ="@string/pholder_video"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </mehdi.sakout.fancybuttons.FancyButton>
    </LinearLayout>

</FrameLayout>