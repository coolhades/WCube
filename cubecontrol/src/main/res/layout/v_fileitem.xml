<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly"
    android:background="@color/lightestGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_fileItem"
        android:padding="4dp"
        fancy:fb_text = "测试数据"
        fancy:fb_iconPosition = "top"
        fancy:fb_defaultColor="#00000000"
        fancy:fb_textColor = "#ffffff"
        fancy:fb_fontIconSize = "40dp"
        fancy:fb_iconFont = "iconfont.ttf"
        fancy:fb_fontIconResource ="@string/pholder_file"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </mehdi.sakout.fancybuttons.FancyButton>

</LinearLayout>