<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/Ground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_back"
        android:paddingTop="9dp"
        android:paddingBottom="@dimen/dp_10"
        fancy:fb_text = ""
        fancy:fb_defaultColor="#00ffffff"
        fancy:fb_textColor = "#ffffff"
        fancy:fb_fontIconSize = "30dp"
        fancy:fb_iconFont = "iconfont.ttf"
        fancy:fb_fontIconResource ="@string/btn_back"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </mehdi.sakout.fancybuttons.FancyButton>

    <TextView
        android:id="@+id/tv_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:padding="4dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_reload"
        android:padding="10dp"
        fancy:fb_text = ""
        fancy:fb_defaultColor="#00ffffff"
        fancy:fb_textColor = "#ffffff"
        fancy:fb_fontIconSize = "30dp"
        fancy:fb_iconFont = "iconfont.ttf"
        fancy:fb_fontIconResource ="@string/btn_reload"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </mehdi.sakout.fancybuttons.FancyButton>
</LinearLayout>